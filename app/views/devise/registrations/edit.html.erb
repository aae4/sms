<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }, :validate => true) do |f| %>
  <!--%= devise_error_messages! %-->

  <div class="control-group form-inline">
    <%= f.label :surname, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :surname, :autofocus => true %>
    </div>
  </div>

  <div class="control-group form-inline">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :name, :autofocus => true %>
    </div>
  </div>

  <div class="control-group form-inline">
    <%= f.label :patronymic, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :patronymic, :autofocus => true %>
    </div>
  </div>

  <div class="control-group form-inline">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="control-group form-inline">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => "off" %>
      <p>(оставьте пустым если хотите оставить без изменений)</p>
      <!--p>(leave blank if you don't want to change it)</p-->
    </div>
  </div>

  <div class="control-group form-inline">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="control-group form-inline">
    <%= f.label :current_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :current_password %>
      <p>(Введите текущий пароль для подтверждения изменений)</p>
      <!--p>(we need your current password to confirm your changes)</p-->
    </div>
  </div>

  <!--div><%= f.submit "Update" %></div-->

  <div class="form-actions">
    <%= f.submit t("helpers.links.update"), :class => 'btn btn-primary' %>
    <%= link_to t("helpers.links.back"), :back, :class => 'btn' %>
    <!--%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %-->
  </div>
<% end %>

