<!DOCTYPE html>
<html>
<head>
  <title>Sms</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "defaults" %>
  <%= javascript_include_tag "rails.validations" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
	<div class="navbar-inner">
		<%= link_to "Sms-Sender", home_path, :class => 'brand'%>
		<ul class="nav">
			<% if service_signed_in? %>
				<li>
					<%= link_to messages_path do %>
						<i class="icon-envelope"></i> Сообщения
					<%end%>
				</li>
				<li>
					<%= link_to groups_path do %>
						<i class="icon-list-alt"></i> Группы контактов
					<%end%>
				</li>
				<li> 
					<%= link_to users_path do %>
		  				<i class="icon-user"></i> Контакты
					<% end %>
				</li>
				<li class="nav pull-right">
					<%= link_to destroy_service_session_path, :method => :delete do %>
		  				<i class="icon-user"></i> Sign out
					<% end %>
				</li>
			<% else %>
				<li>
					<%= link_to new_service_session_path do %>
		  				<i class="icon-user"></i> Sign in
					<% end %>
				</li>
			<% end %>
			<li>
				<%= link_to home_help_path do %>
					<i class="icon-info-sign"></i> Помощь
				<%end%>
			</li>
		</ul>
	</div>
</div>
<div class="container">
	<% flash.each do |name, msg| %>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			<a class="close" data-dismiss="alert">x</a>
			<%= msg %>
		</div>
	<% end %>
	<div class="row">

	  <div class="bs-docs-sidebar"><!--%= render :partial => 'shared/leftbar' %--></div>

		<div class="span9"><%= yield %></div>

		<div class="right-bar span3">

			<!--div class="col"-->
				<div class = 'right-bar-cab'>
					<%= render :partial => 'home/right_bar_cab' %>
				</div>
				<div class = 'right-bar-info'>
					<%= render :partial => '/home/right_bar_info' %>
				</div>
			<!--/div-->

		</div>
	</div>
</div>
</body>
</html>
