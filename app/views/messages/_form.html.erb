<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
<table>
<tr>
	<td>
		<div class="control-group">
			<%= f.label :subject, :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :subject, :class => 'text_field' %>
			</div>
  		</div>
  		<div class="control-group">
    		<%= f.label :body, :class => 'control-label' %>
    		<div class="controls">
      			<%= f.text_area :body, :class => 'text_area', :size => "30x10" %>
    		</div>
  		</div>
  		<%= f.hidden_field :service_id, :value => current_service.id %>
  	</td>
  	<td>
  		<div class = 'add_user_to_message'>
		<!--%= select 'service', 'user_id', User.find(:all).collect {|u| [u.name, u.id]}, :prompt => "Select User" %-->
		<% for user in current_service.users %>
			<div>
  			<%= check_box_tag "message[user_ids][]", user.id, current_service.users.include?(user) %>
  			<%= user.name %> | <%= user.phone %> 
			</div>
		<% end %>
		<%= link_to "Добавить", users_new_path, :class => 'btn' %>
  		</div>
  	</td>
</tr>
</table>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>
